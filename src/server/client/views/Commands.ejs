<!DOCTYPE html>
<html lang="pt-Br">
	<head>
		<%- include('./partials/Head.ejs', { botName: botName, pageTitle: pageTitle, logged: logged }) %>
	</head>
	<body class="overflow-auto bg-gray-800">
		<%- include('./partials/Header.ejs', { botName: botName, pageTitle: pageTitle, logged: logged }) %>
		<div class="h-screen flex flex-col bg-gray-700">
			<div class="p-5 mt-10 bg-gray-700">
				<div>
					<h1
						class="text-indigo-100 font-semibold text-4xl
						text-center p-3"
					>
						Comandos <%= botName %>
					</h1>
					<input
						type="text"
						name="command"
						id="command"
						placeholder="Procurar por Comando"
						class="w-full h-10 bg-gray-800
						sm:border-2 lg:border rounded border-solid border-gray-900
						p-2 text-indigo-100
						focus-within:border-pink-600 focus:border-pink-600"
					>
				</div>
				<% moduleArray.forEach(moduler => { %>
					<% moduler.options.forEach(option => { %>
						<div class="flex flex-col bg-gray-900 rounded mt-5 shadow-md">
							<div
								class="flex p-4 border-b border-black rounded
								view-toggler cursor-pointer"
								data-target="#<%= option.name %>"
							>
								<h1 class="text-indigo-100 text-2xl">
									<%= option.name %>
								</h1>
								<p class="text-gray-500 ml-2 text- self-center text-left">
									- <%= option.description %>
								</p>
							</div>
							<div class="flex flex-col bg-gray-800 p-5 hidden" id="<%= option.name %>">
								<h1 class="text-gray-200 font-semibold mb-3">Como usar:</h1>
								<p class="text-gray-400 mb-2 ml-3"><%= option.name %> [<%= option.options.map(e => e.description).join(', ') %>]</p>
							</div>
						</div>
					<% }) %>
				<% }) %>
			</div>
		</div>
		<script src="/public/scripts/toggler.js"></script>
	</body>
</html>
