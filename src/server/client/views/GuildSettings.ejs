<!DOCTYPE html>
<html lang="pt-Br">
	<head>
		<%- include('./partials/Head.ejs', { botName: botName, pageTitle: pageTitle, logged: logged }) %>
	</head>
	<body class="overflow-auto bg-gray-800">
		<%- include('./partials/Header.ejs', { botName: botName, pageTitle: pageTitle, logged: logged }) %>
		<div class="h-screen flex flex-col bg-gray-700">
			<div class="p-5 mt-10 bg-gray-700">
				<div class="text-center">
					<h1
						class="text-indigo-100 font-semibold
						text-4xl text-center"
					>
						<%= guild.name %>
					</h1>
				</div>

				<div class="bg-gray-800 mt-10">
					<div class="bg-gray-900 p-3 shadow-lg">
						<h1 class="text-indigo-100 flex items-center font-semibold">
							<i class="material-icons mr-1">
								dashboard_customize
							</i>
							Geral
						</h1>
					</div>
					<div class="bg-gray-800 flex flex-col p-3">
						<div>
							<div class="flex flex-col mb-2">
								<label for="bot_name">
									<h1 class="text-indigo-100">
										Nome do Bot
									</h1>
								</label>
	
								<input
									type="text"
									name="bot_name"
									id="bot_name"
									placeholder="<%= guild.members.cache.get(bot.id) ? guild.members.cache.get(bot.id).nickname : 'Novo Nome' %>"
									class="h-10 bg-gray-600
									sm:border-2 lg:border rounded border-solid border-gray-900
									p-2 text-indigo-100"
								>
							</div>
							<div class="flex flex-col mb-2">
								<label for="dj_role">
									<h1 class="text-indigo-100">
										Cargo de DJ
									</h1>
								</label>
	
								<select
									name="dj_role"
									id="dj_role"
									class="h-10 bg-gray-600
									sm:border-2 lg:border rounded border-solid border-gray-900
									p-2 text-indigo-100"
								>
									<option selected disabled>Escolha um Cargo</option>
									<% guild.roles.cache.forEach(r => { %>
										<option value="<%= r.id %>"><%= r.name %></option>
									<% }) %>
								</select>
							</div>
						</div>
						<div class="mt-2">
							<button
								class="add-button-ans flex h-12 items-center
								bg-indigo-500
								text-indigo-100 shadow-md p-3 font-semibold rounded
								transition-all ml-auto button-link"
								id="submitButton"
							>
								Salvar
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script src="/public/scripts/toggler.js"></script>
		<script src="/public/scripts/guildSettings.js"></script>
	</body>
</html>
